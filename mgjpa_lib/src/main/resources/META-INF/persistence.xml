	<persistence-unit name="mgPostgress" transaction-type="RESOURCE_LOCAL">
	    <provider>org.hibernate.ejb.HibernatePersistence</provider>
      	<non-jta-data-source>java:comp/env/jdbc/postgresDS</non-jta-data-source>
